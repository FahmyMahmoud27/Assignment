<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:padding="8dp"
      >

      <TextView
          android:id="@+id/header_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="#02006b"
          android:padding="15dp"
          android:text="@string/routeAppOne"
          android:textColor="@color/white"
          android:textSize="30sp"
          android:textStyle="bold"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <ImageView
          android:id="@+id/androidImg"
          android:layout_width="match_parent"
          android:layout_height="200dp"
          android:scaleType="fitXY"
          android:src="@drawable/android"
          app:layout_constraintBottom_toTopOf="@id/androidBtn1"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/header_title"
          android:padding="8dp"
          />

      <Button
          android:id="@+id/androidBtn1"
          android:layout_width="match_parent"
          android:layout_height="60dp"

          android:layout_marginBottom="16dp"
          app:cornerRadius="10dp"
          android:backgroundTint="@color/Blue"
          android:textSize="18sp"
          android:text="@string/android_course"

          />

      <ImageView
          android:id="@+id/iosImg"
          android:layout_width="match_parent"
          android:layout_height="200dp"
          android:scaleType="fitXY"
          android:src="@drawable/ios"
          android:padding="8dp"
          />
      <Button
          android:id="@+id/iosBtn2"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_marginBottom="16dp"
          app:cornerRadius="10dp"
          android:backgroundTint="@color/Blue"
          android:text="IOS COURSE"
          android:textSize="18sp"
          />

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="200dp"
          android:scaleType="fitXY"
          android:src="@drawable/full_stack"
          android:padding="8dp"
          />

      <Button
          android:id="@+id/fullStackBtn3"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_marginBottom="16dp"
          app:cornerRadius="10dp"
          android:backgroundTint="@color/Blue"
          android:text="FULL STACK"
          android:textSize="18sp"
          />



  </LinearLayout>



</ScrollView>